# Desabilitar a barra de status do Zathura by default
set guioptions none

# Mudando a fonte da barra de status
set font "ubuntu mono 10"

# Desabilitando a notificacao de texto selecionado
set selection-notification false

# Copiando para o clipboard ao inves do primary
set selection-clipboard clipboard

# Revertendo cores (dark mode)
set recolor true
map C set recolor

# Mapeando teclas mais confortaveis para zoom
map i zoom in
map u zoom out
